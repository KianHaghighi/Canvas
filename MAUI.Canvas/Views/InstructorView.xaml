<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Canvas.Views.InstructorView"
             Title="InstructorView">
    <VerticalStackLayout>
        <Label 
            Text="INSTRUCTOR VIEW"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            Text="Cancel"
            Clicked="CancelClicked"
            />
        <Button 
            Text="Add Enrollment"
            Clicked="AddEnrollmentClicked"
            />
        <Button
                Text="Remove Enrollment"
                Clicked="RemoveEnrollmentClick"
                />
        <Button 
            Text="Add Course"
            Clicked="AddCourseClicked"
            />
        <Button Text="Link a Student to Course" 
                Clicked="LinkStudentClicked" 
        />
    </VerticalStackLayout>
    
</ContentPage>