<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Canvas.Views.AddModuleView"
             Title="AddModuleView">
    <StackLayout>
        
        <Label Text="Module Name" />
        <Entry Text="{Binding ModuleName, Mode=TwoWay}" />

        <Label Text="Module Description" />
        <Entry Text="{Binding ModuleDescription, Mode=TwoWay}" />

        <Button Text="Add Module" Command="{Binding AddModuleCommand}" Clicked="AddClicked"/>
    </StackLayout>
</ContentPage>
